{
  "database": {
    "name": "ly",
    "username": "root",
    "password": "root",
    "options": {
      "host": "localhost",
      "dialect": "mysql",
      "pool": {
        "max": 5,
        "min": 0,
        "idle": 10000
      }
    }
  },
  "mqtt": {
    "port": 5112,
    "persistence": {
      "factory": "mongo",
      "url": "mongodb://localhost:27017/mosca2"
    },
    "http": {
      "port": 1884,
      "bundle": true,
      "static": "./"
    }
  },
  "mongo": {
    "host": "mongodb://127.0.0.1:27017/ly"
  },
  "logging": {
    "appenders": [
      {
        "type": "console"
      },
      {
        "type": "dateFile",
        "filename": "debug",
        "pattern": "-yyyy-MM-dd.log",
        "maxLogSize": 20480,
        "alwaysIncludePattern": true,
        "backups": 3,
        "category": "debug"
      },
      {
        "type": "dateFile",
        "filename": "error",
        "pattern": "-yyyy-MM-dd.log",
        "maxLogSize": 20480,
        "alwaysIncludePattern": true,
        "backups": 3,
        "category": "error"
      }
    ]
  }
}